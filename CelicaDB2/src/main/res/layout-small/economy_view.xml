<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:columnCount="2" >
    <com.dublet.celicadb2.widgets.EditableTextView  android:id="@+id/metric"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/metric_unit" android:text="@string/unit_lphkm"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" android:focusable="false"/>
    <com.dublet.celicadb2.widgets.EditableTextView android:id="@+id/imperial_uk"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/imperial_uk_unit" android:text="@string/unit_mpg_uk"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" android:focusable="false"  />
    <com.dublet.celicadb2.widgets.EditableTextView  android:id="@+id/imperial_us"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/imperial_us_unit" android:text="@string/unit_mpg_us"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" android:focusable="false"  />
    <com.dublet.celicadb2.widgets.EditableTextView android:id="@+id/imperial_simpsons"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/imperial_simpsons_unit"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
</GridLayout>