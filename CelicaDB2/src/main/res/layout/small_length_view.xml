<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:orientation="horizontal" >
    <com.dublet.celicadb2.widgets.EditableTextView android:id="@+id/metric"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:layout_marginRight="8sp"
        android:id="@+id/metric_unit" android:text="@string/unit_millimetres"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" />
    <com.dublet.celicadb2.widgets.EditableTextView  android:id="@+id/imperial"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/imperial_unit" android:text="@string/unit_inch"
        android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:gravity="center" />
